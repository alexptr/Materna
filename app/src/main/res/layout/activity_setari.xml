<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.example.alexpetr.materna.SetariActivity">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#38A9E0"
        >

        <!-- android:theme="@style/AppTheme.AppBarOverlay"> -->

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"

            >


            <!-- android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" > -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="25"
                    android:weightSum="100">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/materna"
                        android:layout_weight="60"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/str_menu_materna"
                        android:layout_weight="40"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:elegantTextHeight="false"
                        android:textAlignment="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="25"
                    android:weightSum="100">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/ipromo"
                        android:layout_weight="60"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/str_menu_ipromo"
                        android:layout_weight="40"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:elegantTextHeight="false"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="25"
                    android:weightSum="100">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/checklist"
                        android:layout_weight="60"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/str_menu_checklist"
                        android:layout_weight="40"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:elegantTextHeight="false"
                        android:textAlignment="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="25"
                    android:weightSum="100">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/setari"
                        android:layout_weight="60"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/str_menu_setari"
                        android:layout_weight="40"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:elegantTextHeight="false"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_setari" />

</android.support.design.widget.CoordinatorLayout>
